{
    "name": "convex-devtools",
    "version": "1.2.0",
    "description": "A standalone development tool for testing Convex queries, mutations, and actions with identity mocking and request management",
    "type": "module",
    "bin": {
        "convex-devtools": "./dist/cli/index.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:cli": "tsup",
        "build:all": "pnpm build && pnpm build:cli",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "pnpm build:all"
    },
    "keywords": [
        "convex",
        "devtools",
        "testing",
        "development",
        "api-client",
        "postman"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": ""
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "chalk": "^5.3.0",
        "chokidar": "^3.6.0",
        "commander": "^12.1.0",
        "convex": "^1.17.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "nanoid": "^5.0.7",
        "open": "^10.1.0",
        "sql.js": "^1.10.3",
        "ts-morph": "^24.0.0",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/sql.js": "^1.4.9",
        "@types/node": "^22.0.0",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/ws": "^8.5.12",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.7.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.7",
        "postcss": "^8.4.40",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.7",
        "tsup": "^8.2.4",
        "typescript": "^5.5.4",
        "vite": "^5.4.0",
        "zustand": "^4.5.4"
    },
    "peerDependencies": {
        "convex": ">=1.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
