{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "./dist/cli",
        "rootDir": "./src/cli"
    },
    "include": [
        "src/cli/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}